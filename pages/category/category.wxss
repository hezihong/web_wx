.categoryitem{
    width:25%;
    height:300px;
    float: left;
}

.categoryitem .item{
    min-height:400px;
    background: #69C3AA;
}
.categoryitem .item view{
    height: 50px;
    line-height: 50px;
    text-align: center;
    font-size: 14px;
    color:#fff;
}

.categoryitem .item view.con{
    background: #59A691;
    color: #fff;
}

.contentItem{
    width:75%;
    height: 300px;
    float: left;
}

.content{
    width: 100%;
    background: #fff;
}


.content image{
    width: 100%;
}

.clearfix::after{
  content: "";
  display: block;
  clear: both;
}



