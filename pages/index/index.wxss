/* 样式不需要引入 */

.swiperImg{
  width: 100%;
  height: 150px;
}
.category{
    padding: 15px 0px 10px 0px;
}

.category .item{
    width: 25%;
    float: left;
    margin-bottom:10px;
}
.icon_warp{
    width:40px;
    margin:0 auto;
}
.icon_warp image{
    width: 40px;
    height: 40px;
}
.icon_warp text{
    font-size: 14px;
    width: 40px;
    text-align: center;
    display: block;
    color:#737373;
}
.common_title{
    padding:10px;
    font-size: 16px;
    border-bottom: 1px solid #CCCCCC;
}

/* 商品列表 */
.goods_list{
    height: 100px;
    padding-left:100px;
    position: relative;
}
.left {
    position: absolute;
    top:10px;
    left: 10px;
}

.left image{
    width: 80px;
    height: 80px;
}

.right{
    padding:10px 0;
    height: 80px;
    /* overflow: hidden; */
}
.goods_name{
    font-size: 14px
}
.goods_address{
    color:#929292;
    font-size: 12px;
}
.goods_price{
    font-size: 14px;
    color:#F47378;
    width: 100%;
    line-height: 22px;
    height: 22px;
    margin-top: 5px;
}
.cart{
    position: absolute;
    right: 10px;
    bottom:10px;
}
.cart image{
    width: 20px;
    height: 20px;
}


/*  */
.clearfix::after{
  clear: both;
  content: "";
  display: block;
}
.proBox{
  width: 100%;
  /* padding: 5px; */

}

.proBox .imgbox{
  width: 50%;
  float: left
}
.imgbox image{
  width: 100%;
}
.text{
  height: 50px;
  line-height: 50px;
  text-align: center;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
  
}
