.orderlist{
  margin-top: 10px;
  margin: 10px;
  border: 1px solid #ccc;
}
.orderlist .ordertitle{
  height: 30px;
  line-height: 30px;
  padding-left: 10px;
}
/* 订单 */
.pay_order{
    background: rgb(238, 235, 235);
    margin-bottom: 10px;
    padding: 0 20px;
}
.pay_order .thead{
    padding: 10px;
    font-size: 14px;
    /* border: 1px solid #e5e5e5; */
}
.pay_order .tr .td{
    display: inline-block;
    width: 33.33%;

    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.pay_order .tbody{
    padding:5px;
    font-size: 12px;
    margin-bottom: 1px;
}
.pay_order .tr .td:nth-child(1){
    width: 60%;
}
.pay_order .tr .td:nth-child(2){
    width: 20%;
}
.pay_order .tr .td:nth-child(3){
    width: 20%;
}

.clearfix::after{
  clear: both;
  content: "";
  display: block;
}

.btn{
  height: 30px;
  line-height: 30px;
}

.btn button.sureBtn{
  width: 60px;
  font-size: 12px;
  height: 25px;
  line-height: 25px;
  text-align: center;
  float: right;
  padding: 0px;
  color: white;
  background-color: rgb(101, 139, 44);
  margin-right: 20px;
}

.btn button.walkBtn{
  width: 60px;
  font-size: 12px;
  height: 25px;
  line-height: 25px;
  text-align: center;
  float: right;
  padding: 0px;
  color: black;
  background-color: white;
  margin-right: 20px;
  border: 1px solid black;
  opacity: 0.7;
}